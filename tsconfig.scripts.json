{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts",
    "server/schemas/**/*.ts",
    "server/runner/types.ts",
    "server/runner/IWasmRunner.ts",
    "server/websocket/StateManager.ts"
  ]
}
